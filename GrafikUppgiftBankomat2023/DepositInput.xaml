<Window x:Class="GrafikUppgiftBankomat2023.DepositInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deposit" Height="150" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Enter deposit amount:" />
            <TextBox x:Name="txtDepositAmount" />
            <StackPanel Orientation="Horizontal">
                <Button Content="OK" Width="80" Margin="0,10,10,0" Click="OKButton_Click"/>
                <Button Content="Cancel" Width="80" Margin="0,10,0,0" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
